<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:burstly="http://burstly.com/lib/ui/schema"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <com.burstly.lib.ui.BurstlyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        burstly:zoneId="0754162579083234312"
        burstly:burstlyViewId="MainMenuBanner"
        burstly:defaultSessionLife="30"
        android:id="@+id/bannerview"/>

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Show Interstitial"
        android:id="@+id/button"/>

</RelativeLayout>